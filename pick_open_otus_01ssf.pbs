#!/bin/bash
#SBATCH -t 1:00:00
#SBATCH -n 24
#SBATCH -p short

#Load modules and qiime
module load eb
module load Miniconda2
#Load virtual environment
source activate qiime1

export TMPDIR=~/qiime_tmp

#Picking OTUS (open reference)
echo "Picking OTUS with open reference"
pick_open_reference_otus.py \
-i ~/Demultiplexed/Split_libraries_Q25/seqs.fna \
-s 0.1 \
--prefilter_percent_id 0.0 \
-o ~/Open_ref_otus_Q25_s01 \
-r ~/SILVA_database/silva_132_97_16S.fna \
-a \
-O 24

#Deactivating environment
source deactivate
