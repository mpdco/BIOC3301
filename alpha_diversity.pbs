#!/bin/bash
#SBATCH -t 1:00:00
#SBATCH -n 24
#SBATCH -p short

#Load modules and qiime
module load eb
module load Miniconda2
#Load virtual environment
source activate qiime1

export TMPDIR=~/qiime_tmp

#Compute alpha diversity
echo "Computing alpha diversity"
alpha_rarefaction.py \
-i /home/cbmucl06/Chimerafree_cloref_OTUs_SILVA/outliersingletonfree_otu_table.biom \
-o /home/cbmucl06/Chimerafree_cloref_OTUs_SILVA/Results/Alpha_analysis_full_e3700 \
-t ~/SILVA_database/97_otus.tre \
-p /home/cbmucl06/Parameter_files/alpha_div.txt \
--min_rare_depth 0 \
-e 3700 \
-a \
-O 24

#Deactivating environment
source deactivate
